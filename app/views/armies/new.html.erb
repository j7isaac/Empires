<div>
  <h1>Create a New Battle</h1>
  <%= form_for Army.new do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :infantry %>
    <%= f.number_field :infantry, in: 1..10000, step: 1 %>
    <%= f.label :archers %>
    <%= f.number_field :archers, in: 1..2500, step: 1 %>
    <%= f.label :knights %>
    <%= f.number_field :knights, in: 1..500, step: 1 %>
    <%= f.submit 'Save' %>
  <% end %>
</div>