<div class="flex-container">
  <h1>New Army</h1> 
  <div class="box">
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <%= form_for Army.new do |f| %>
      <div class='box-item'>
        <%= f.label :name %>
        <%= f.text_field :name, style: "max-width: 80%" %>
      </div>
      <div class='box-item'>
        <%= f.label :infantry %>
        <%= f.number_field :infantry, in: 1..10000, step: 1 %>
      </div>
      <div class='box-item'>
        <%= f.label :archers %>
        <%= f.number_field :archers, in: 1..2500, step: 1 %>
      </div>
      <div class='box-item'>
        <%= f.label :knights %>
        <%= f.number_field :knights, in: 1..500, step: 1 %>
      </div>
      </br>
      <div class='box-item'>
        <%= f.submit 'Save Army', class: 'btn' %>
      </div>
      </br>
    <% end %>
    <div class='box-item'>
    <%= link_to "New Battle", root_path, class: "btn-big" %>
  </div>
</div>